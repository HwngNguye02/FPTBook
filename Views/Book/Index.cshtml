@model List<Book>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://theme.hstatic.net/200000287623/1000948667/14/slideshow_2.jpg?v=130" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://theme.hstatic.net/200000287623/1000948667/14/slideshow_4.jpg?v=130" alt="Second slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="text-center">
    <a class="btn btn-primary" asp-controller="Book" asp-action="SortASC">
        Asc
    </a>
    <a class="btn btn-info" asp-controller="Book" asp-action="SortDSC">
        Desc
    </a>
    <a class="btn btn-danger" asp-controller="Order" asp-action="Detail">Order</a>
</div>
<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            @foreach (var b in Model)
            {
                <div class="col-md-12 col-lg-3 mb-3 mb-lg-0" style="margin-top: 20px;">
                    <div class="card">
                        <img height="380" src="@b.Image"
                         class="card-img-top" alt="Laptop" />
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-3">
                                <a asp-controller="Book" asp-action="Detail" asp-route-id="@b.Id" 
                                style="text-decoration: none; outline: none;">@b.Name</a>
                            </div>
                            <div class="d-flex justify-content-between mb-3">                               
                                <h5 class="text-dark mb-0">@b.Price VNĐ</h5>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <p class="text-muted mb-0">Available: <span class="fw-bold">@b.Quantity</span></p>
                                <div class="ms-auto text-warning">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

