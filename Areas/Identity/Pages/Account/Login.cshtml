@page
@model LoginModel

@*<h1>@ViewData["Title"]</h1> class="vh-100" style="background-color: #9A616D;"*@
<section class="vh-100" style="background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://product.hstatic.net/200000287623/product/your_name_ln_-_bia1_cec970998b494761a56d632db3efd55d_large.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form id="account" method="post">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">FPTBook</span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" asp-for="Input.Email"></label>
                                        <input type="email" class="form-control form-control-lg" asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" asp-for="Input.Password"></label>
                                        <input type="password" class="form-control form-control-lg" asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                    </div>
                                    <div class="checkbox">
                                        <label asp-for="Input.RememberMe">
                                            <input asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                    <a class="small text-muted" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        <a style="color: #393f81;" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have an account?Sign in</a>
                                    </p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
